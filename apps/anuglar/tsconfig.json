{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "plugins": [{ "name": "tslint-language-service" }],
    "paths": {
      "@arslan/vms.base/*": ["src/app/pages/base/*"],
      "@arslan/vms.base": ["src/app/pages/base/public-api"],
      "@arslan/vms.base/config": ["src/app/pages/base/config/public-api"],
      "@arslan/vms.inventory/*": ["src/app/pages/inventory/*"],
      "@arslan/vms.inventory": ["src/app/pages/inventory/public-api"],
      "@arslan/vms.inventory/config": ["src/app/pages/inventory/config/public-api"],
      "@arslan/vms.order/*": ["src/app/pages/order/*"],
      "@arslan/vms.order": ["src/app/pages/order/public-api"],
      "@arslan/vms.order/config": ["src/app/pages/order/config/public-api"],
      "@arslan/vms.payment/*": ["src/app/pages/payment/*"],
      "@arslan/vms.payment": ["src/app/pages/payment/public-api"],
      "@arslan/vms.payment/config": ["src/app/pages/payment/config/public-api"],
      "@arslan/vms.planner/*": ["src/app/pages/planner/*"],
      "@arslan/vms.planner": ["src/app/pages/planner/public-api"],
      "@arslan/vms.planner/config": ["src/app/pages/planner/config/public-api"],
      "globalize": ["node_modules/globalize/dist/globalize"],
      "globalize/*": ["node_modules/globalize/dist/globalize/*"],
      "cldr": ["node_modules/cldrjs/dist/cldr"],
      "cldr/*": ["node_modules/cldrjs/dist/cldr/*"]
    }
  }
}
